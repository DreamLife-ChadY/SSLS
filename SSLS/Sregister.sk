on command:
    if {locked.%{uuid.%player%}%} is set:
        if command is "login" or "register":
            stop
        else:
            cancel event
            send "&cVous devez vous connecter/enregistrer avant d'éxecuter cette commande."

on any movement:
	if {locked.%{uuid.%player%}%} is set:
		cancel event
		send "&cVous devez vous connecter/enregistrer avant de bouger."
	else:
		stop

